# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3001

# AWS Configuration
REGION=us-east-1
STAGE=dev
DYNAMODB_TABLE_PREFIX=dev

AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS Service Endpoints (for local development and Docker)
# Leave empty to use default localhost endpoints
# In Docker, use service names: http://dynamodb:8000, http://localstack:4566
DYNAMODB_ENDPOINT=http://localhost:8000
SQS_ENDPOINT=http://localhost:4566
SNS_ENDPOINT=http://localhost:4566
STEP_FUNCTIONS_ENDPOINT=http://localhost:4566

# AWS Services (LocalStack endpoints for development)
# For production, these will be set by Serverless Framework
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:dev-payments-events
SQS_QUEUE_URL=http://localhost:4566/000000000000/dev-payments-queue
STEP_FUNCTION_ARN=arn:aws:states:us-east-1:123456789012:stateMachine:WompiPaymentProcessor-dev

# Wompi API Configuration
# Sandbox credentials for testing
WOMPI_API_URL=https://api-sandbox.co.uat.wompi.dev/v1
WOMPI_PUBLIC_KEY=
WOMPI_PRIVATE_KEY=
WOMPI_INTEGRITY_SECRET=

# Payment Polling Configuration
PAYMENT_POLLING_INTERVAL_MS=10000
PAYMENT_POLLING_MAX_DURATION_MS=120000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Serverless Offline
IS_OFFLINE=true
