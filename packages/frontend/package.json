{
  "name": "@payment-gateway/frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL:-http://localhost:3001} next build",
    "build:export": "NEXT_EXPORT=true NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL:-http://localhost:3001} next build",
    "build:check": "tsc --noEmit",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "deploy": "node scripts/deploy-s3-cloudfront.js",
    "sls:deploy": "npm run build:export && serverless deploy",
    "sls:deploy:dev": "npm run build && serverless deploy --stage dev",
    "sls:remove": "serverless remove",
    "sls:info": "serverless info"
  },
  "dependencies": {
    "@ant-design/nextjs-registry": "^1.0.0",
    "@reduxjs/toolkit": "^2.0.1",
    "antd": "^5.12.8",
    "axios": "^1.6.2",
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-credit-cards-2": "^1.0.3",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "serverless": "^3.38.0",
    "serverless-s3-sync": "^3.1.0",
    "serverless-cloudfront-invalidate": "^1.5.0",
    "typescript": "^5.3.3"
  }
}
