FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm i

# Copy source code (public directory will be included if it exists)
COPY . .

# Ensure public directory exists (Next.js may need it)
RUN mkdir -p public || true

EXPOSE 3000

ENV PORT=3000
ENV HOSTNAME="0.0.0.0"
ENV NEXT_PUBLIC_API_URL=http://localhost:3001

CMD ["npm", "run", "dev"]
